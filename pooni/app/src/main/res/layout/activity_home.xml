<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.uki121.pooni.MainActivity">

    <ImageView
        android:id="@+id/pooni_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#00000000"
        android:contentDescription="@string/todo"
        android:src="@drawable/pooni_trans" />

    <Button
        android:id="@+id/button_start"
        android:layout_width="128dp"
        android:layout_height="84dp"
        tools:layout_editor_absoluteY="156dp"
        tools:layout_editor_absoluteX="128dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="115dp"
        android:text="@string/home_start"/>

    <Button
        android:id="@+id/button_quick"
        android:layout_width="128dp"
        android:layout_height="84dp"
        tools:layout_editor_absoluteY="285dp"
        tools:layout_editor_absoluteX="128dp"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/button_start"
        android:layout_alignStart="@+id/button_start"
        android:text="@string/home_quick"/>

</RelativeLayout>
